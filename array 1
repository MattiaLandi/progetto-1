#include <iostream>
using namespace std;

int main() {
    
    int n;

    
    cout << "Inserisci la dimensione dell'array: ";
    cin >> n;

   
    if (n <= 0) {
        cout << "La dimensione dell'array deve essere maggiore di 0." << endl;
        return 1; 
    }

    
    int array[n];

    
 cout << "Inserisci gli elementi dell'array:" <<endl;
    for (int i=0; i<n; i++) {
        cout << "Elemento " << i + 1 << ": ";
        cin >> array[i];
    }

    int somma = 0;
    for (int i=0; i<n; i++) {
        somma += array[i];
    }

    
    cout << "La somma degli elementi dell'array Ã¨: " << somma <<endl;

    return 0;
}
