#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

#define N 6
int main(){
    
    int array[N];
    
    int somma=0;
    int prodotto=1;
    float media=0;
    
    
    srand(time(NULL));
    for(int i=0;i<N;i++){
        
        array[i]=rand()%51;
        
        cout<<array[i]<<endl;
        
        somma+=array[i];
        prodotto*=array[i];
        media=somma/N;
    
    }
    cout<<"la somma è:"<<somma<<endl<<"il prod è:"<<prodotto<<endl<<"la media è:"<<media<<endl;
}

