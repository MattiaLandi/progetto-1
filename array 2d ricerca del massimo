#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;
#define N 5

int main() {
   
    srand(time(NULL));

    const int righe = 5;
    const int colonne = 5;
    int matrice[N][N];
    int contatoreGenerazioni = 0;

    
    for (int i = 0; i < righe; ++i) {
        for (int j = 0; j < colonne; ++j) {
            int numeroCasuale;
            do {
                numeroCasuale = rand() % 32 - 10;  
                contatoreGenerazioni++;
            } while (numeroCasuale < 0);

            matrice[i][j] = numeroCasuale;
        }
    }

    cout << "Matrice generata:" << endl;
    for (int i = 0; i < righe; ++i) {
        for (int j = 0; j < colonne; ++j) {
            cout << matrice[i][j] << '\t';
        }
        std::cout << endl;
    }

    
    int massimoTerzaColonna = matrice[0][2];
    for (int i = 1; i < righe; ++i) {
        if (matrice[i][2] > massimoTerzaColonna) {
            massimoTerzaColonna = matrice[i][2];
        }
    }

    cout << "Massimo nella terza colonna: " << massimoTerzaColonna << endl;

    
    int contatoreNumeriInferioriA6 = 0;
    for (int i = 0; i < righe; ++i) {
        for (int j = 0; j < colonne; ++j) {
            if (matrice[i][j] < 6) {
                contatoreNumeriInferioriA6++;
            }
        }
    }

   
 cout << "Numeri inferiori a 6 nella matrice: " << contatoreNumeriInferioriA6 << endl;

    
    cout << "Numero totale di generazioni: " << contatoreGenerazioni << endl;

    return 0;
}





